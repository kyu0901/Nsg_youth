<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">85dp</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">#505050</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Divider2">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">#e3e3e3</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="Divider3">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#505050</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
